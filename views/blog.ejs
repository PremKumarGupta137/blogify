<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head') %>
    <title><%= blog.title %></title>
  </head>
  <body>
    <%- include('partials/nav') %>

    <div class="container mt-4">
      <h1><%= blog.title %></h1>

      <% if (blog.coverImageURL) { %>
        <img src="<%= blog.coverImageURL %>" width="700px" class="img-fluid" />
      <% } %>

      <pre class="mt-3"><%= blog.body %></pre>
    </div>

    <div class="container mt-4 d-flex align-items-center gap-2">
      <img src="<%= blog.createdBy.profileImageURL %>" width="50px" class="rounded-circle" />
      <span><%= blog.createdBy.fullName %></span>
    </div>

    <div class="container mt-3">
      <h2>Comments (<%= comments ? comments.length : 0 %>)</h2>

      <% if (locals.user) { %>
        <form action="/blog/comment/<%= blog._id %>" method="post">
          <div class="mb-3 d-flex gap-2">
            <input type="text" name="content" class="form-control" placeholder="Enter your comment" />
            <button class="btn btn-sm btn-primary" type="submit">Add</button>
          </div>
        </form>
      <% } %>

      <div class="mt-3">
        <% if (comments && comments.length > 0) { %>
          <% comments.forEach(comment => { %>
            <div class="border rounded p-2 mb-2">
              <div class="d-flex align-items-center gap-2">
                <img src="<%= comment.createdBy.profileImageURL %>" width="40px" class="rounded-circle" />
                <strong><%= comment.createdBy.fullName %></strong>
              </div>
              <pre><%= comment.content %></pre>
            </div>
          <% }) %>
        <% } else { %>
          <p>No comments yet.</p>
        <% } %>
      </div>
    </div>

    <%- include('partials/scripts') %>
  </body>
</html>
